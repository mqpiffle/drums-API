{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-md">
    <h2>Confirm log out?</h2>
    <div class="btn-group">
      <a href="/" class="btn btn-warning me-3">Oops! Don't log me out.</a>
      <form action="/users/logout?_method=DELETE" method="POST">
        <input
          type="submit"
          class="btn btn-danger"
          value="Bye!!">
      </form>
    </div>
  </div>
{% endblock %}